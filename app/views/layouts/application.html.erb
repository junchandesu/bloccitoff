<!DOCTYPE html>
<html>
<head>
  <title>Bloccitoff</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="nav">

	<div class="pull-left" >
		<%= link_to "Blocitoff Homepage", root_path, class: "btn btn-info" %>
	</div>
	<div class="pull-right">
		<% if current_user %> 
			<%= link_to (current_user.name || current_user.email), edit_user_registration_path %> is signed in! <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
		<% else %>
			<%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign UP", new_user_registration_path %>
		<% end %>
	</div>

	
	</div>
	<div class="container">

		<% if flash[:notice] || notice %>
		<div class="alert alert-success top-margin">
			<button type="button" class="close" data-dismiss="alert">&times; </button>
			<%= flash[:notice] %>
		</div>

	<% elsif flash[:error] %>
		<div class="alert alert-danger top-margin">
				<button type="button" class="close" data-dismiss="alert">&times; </button>
			 	<%= flash[:error] %>
		</div>
	<% elsif flash[:alert] || alert %>
		<div class="alert alert-warning top-margin">
			<button type="button" class="close" data-dismiss="alert">&times; </button>
			<%= flash[:alert] %>
		</div>
    <% end %> 
		<%= yield %>
	</div>	
</body>
</html>
