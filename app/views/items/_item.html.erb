<div class="row">
<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
		<div class="col-md-8"> 
			<div class="boderLine"><%= link_to "" , [current_user, item] , method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>
			<%= item.name %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="boderLine">
			<%= pluralize(item.days_left, "day") %>  remaining to complete.
			</div>
		</div>
<% end %>
</div>