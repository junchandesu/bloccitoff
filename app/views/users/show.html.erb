<div class="row">
	<div class="col-md-10">
		<h2>Your information.</h2>
		<ul class="list-group">
			<% if current_user.name %>
			<li class="list-group-item">
				Your username:<%= current_user.name %></li>
			<% end %>
			<li class="list-group-item">Your email: <%= current_user.email %></li>
			<li class="list-group-item">Signed up on <%= current_user.created_at %></li>

    	</ul>

    	<h2>Your To Do list.</h2>

    	<ul class="list-group">
    		
		<%= render partial: 'items/item', collection: @items %>
			
		</ul>

    	
		
		<h4>Lets create a new to-do item!</h4>

        <%= render partial: 'items/form', locals: { item: Item.new } %>
    </div>
</div>